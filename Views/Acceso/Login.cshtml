    }

    .user-icon {
        color: #fff;
    }

    .form-control {
        background-color: #333;
        border: none;
        color: #fff;
    }

        .form-control:focus {
            background-color: #444;
            color: #fff;
        }

    .input-group-text {
        background-color: #444;
        border: none;
        color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-check-input {
        background-color: #444;
        border-color: #666;
    }

</style>