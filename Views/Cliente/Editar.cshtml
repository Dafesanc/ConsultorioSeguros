@{
}

@model Clientes
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h1 class="bg-light">Editar Cliente</h1>
        <form asp-controller="Cliente" asp-action="Editar" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="mb-3">
                <label> Cedula cliente</label>
                <input class="form-control" asp-for="Cedula" type="text" />
                <label></label>
            </div>
            <div class="mb-3">
                <label>Nombre Cliente</label>
                <input class="form-control" asp-for="Nombre" type="text" />
                <label></label>
            </div>
            <div class="mb-3">
                <label>Telefono</label>
                <input class="form-control" asp-for="Telefono" type="text" />
                <label></label>
            </div>
            <div class="mb-3">
                <label>Edad</label>
                <input class="form-control" asp-for="Edad" type="number" />
                <label></label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">
                    Guardar
                </button>
                <a asp-controller="Cliente" asp-action="ClienteView" class="btn btn-dark">Cancelar</a>

            </div>
        </form>
    </div>
</div>