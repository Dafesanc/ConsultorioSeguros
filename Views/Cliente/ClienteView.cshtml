@{
    ViewBag.Title = "Clientes";

}

@model IEnumerable<Clientes>


<h2>Clientes</h2>
<div class="my-3">
    <a asp-controller="Cliente" asp-action="Crear" class="btn btn-success"><i class="fa-solid fa-plus"></i>Nuevo</a>
    <a asp-controller="Cliente" asp-action="CargarExcel" class="btn btn-primary"><i class="fa-solid fa-upload"></i>Cargar</a>
</div>


<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Edad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-alternate">
                <td>@item.Cedula</td>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Edad</td>
                <td>
                    <a asp-controller="Cliente" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i>Editar</a>
                    <a asp-controller="Cliente" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirmar()"><i class="fa-solid fa-trash"></i>Eliminar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        function confirmar() {
            return confirm("Estas seguro que deseas eliminar el siguiente seguro permanentemente?")
        }
    </script>
}
<style>
    .btn-dark i, .btn-danger i {
        margin-right: 5px;
        margin-left: 1px;
    }
    .btn-success i, .btn-primary i {
        margin-right: 5px;
        margin-left: 1px;

    }
    .mb-3 {
        margin-bottom: 2rem !important;
    }

    .table-alternate:nth-child(even) {
        background-color: #f8f9fa;
    }

    .table-bordered {
        border-width: 2px;
        border-radius: 10px;
    }

    .table thead th {
        border-bottom: 2px solid #dee2e6;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    .table .table-alternate {
        border-top-width: 2px;
        border-top-color: #dee2e6;
    }
</style>