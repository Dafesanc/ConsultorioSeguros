@{
    ViewBag.Title = "Cargar Excel";
}

<h2 class="text-center">Cargar Clientes de forma masiva</h2>

<form asp-controller="Cliente" asp-action="CargarExcel" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="archivoExcel">Seleccione un archivo Excel:</label>
        <input type="file" name="archivoExcel" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Cargar</button>
</form>