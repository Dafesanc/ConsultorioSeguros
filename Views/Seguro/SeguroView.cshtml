@{
    ViewBag.Title = "Seguros";
}

@model IEnumerable<Seguros>


<h2>Seguros</h2>
<div class="my-3">
    <a asp-controller="Seguro" asp-action="Crear" class="btn btn-success"><i class="fa-solid fa-plus"></i>Nuevo</a>
    <a asp-controller="Seguro" asp-action="CargarExcel" class="btn btn-primary"><i class="fa-solid fa-upload"></i>Cargar</a>

</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre Seguro</th>
            <th>Código Seguro</th>
            <th>Suma Asegurada</th>
            <th>Prima</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreSeguro</td>
                <td>@item.CodigoSeguro</td>
                <td>@item.SumaAsegurada</td>
                <td>@item.Prima</td>
                <td>
                    <a asp-controller="Seguro" asp-action="Editar" asp-route-id="@item.SeguroId" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i>Editar</a>
                    <a asp-controller="Seguro" asp-action="Eliminar" asp-route-id="@item.SeguroId" class="btn btn-danger" onclick="return confirmar()"><i class="fa-solid fa-trash"></i>Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
   <script>
      function confirmar(){
          return confirm("Estas seguro que deseas eliminar el siguiente seguro permanentemente?")
      }
   </script>
}
<style>
    .btn-dark i, .btn-danger i {
        margin-right: 5px;
        margin-left: 1px;
    }

    .btn-success i, .btn-primary i {
        margin-right: 5px;
        margin-left: 1px;
    }
</style>